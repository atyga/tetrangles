<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tetrangles</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Nunito&display=swap" rel="stylesheet">
    <style>
        a:active{color:red !important;}
        a:hover{color:green;}
    </style>
</head>
<body >
    <header>
        <nav style="margin-bottom:0px !important;height:80px;background-color:rgba(30, 45, 59, 1) !important;" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="col-md-7" >
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/img/logo.jpeg" class="img-fluid" width="190" height="auto"/>
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                </div>
                <div class="col-md-5" style="max-width:50%;">

                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <!-- <partial name="_LoginPartial" />-->
                        <ul class="navbar-nav flex-grow-1" style="font:'Nunito',sans-serif;font-size:1.2em;font-weight:200;">
                            <li class="nav-item pr-5">
                                <a class="nav-link active text-light" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                            </li>
                            <li class="nav-item pr-5">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">SERVICES</a>
                            </li>
                            <li class="nav-item pr-5">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">ABOUT</a>
                            </li>
                            <li class="nav-item pr-5">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">PROJECTS</a>
                            </li>
                            <li class="nav-item pr-5">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">CONTACT</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="max-width:1280px !important;padding:0px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Tetrangles - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
